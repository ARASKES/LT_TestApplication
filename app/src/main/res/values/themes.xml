<resources>
    <!-- Base application theme. -->
    <style name="Theme.LT_TestApplication" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
<!--        <item name="android:textColorPrimary">@color/black</item>-->
<!--        <item name="colorPrimaryDark">@color/black</item>-->
<!--        <item name="colorAccent">@color/blue</item>-->
        <!--        <item name="colorAccent">@color/black</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_disabled</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="actionModeCloseButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="bottomSheetDragHandleStyle">
            @style/Widget.MaterialComponents.BottomSheet.DragHandle
        </item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Widget.MaterialComponents.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">?colorOnSurface</item>
        <!--Alpha can be added optionally to achieve nice color blend-->
        <item name="android:alpha">0.3</item>
    </style>

    <style name="Theme.LT_TestApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TextViews. -->

    <style name="Theme.LT_TestApplication.Headline20" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.LT_TestApplication.Headline18" parent="Theme.LT_TestApplication.Headline20">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.LT_TestApplication.Body16Medium" parent="Theme.LT_TestApplication.Headline20">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.LT_TestApplication.Body16" parent="Theme.LT_TestApplication.Body16Medium">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.LT_TestApplication.Body14Medium" parent="Theme.LT_TestApplication.Body16Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.LT_TestApplication.Body14" parent="Theme.LT_TestApplication.Body14Medium">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.LT_TestApplication.Caption12" parent="Theme.LT_TestApplication.Body14">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.LT_TestApplication.BottomNavigationViewText" parent="Theme.LT_TestApplication.Body14">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- EditTexts. -->

    <style name="Theme.LT_TestApplication.OutlinedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
    </style>

    <style name="Theme.LT_TestApplication.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:background">@drawable/edit_text_background</item>-->
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="maxLines">1</item>
    </style>

    <!-- Buttons. -->

    <style name="Theme.LT_TestApplication.ContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/text_button_color</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Theme.LT_TestApplication.GhostButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/ghost_button_color</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="cornerRadius">16dp</item>
        <item name="icon">@drawable/ic_button_expand_sort</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="Theme.LT_TestApplication.RadioButton" parent="Theme.LT_TestApplication.Body14">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:button">@drawable/radio_button_foreground</item>
    </style>

    <!-- BottomSheet. -->

    <style name="BottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetBackgroundStyle</item>
    </style>

    <style name="BottomSheetBackgroundStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
</resources>